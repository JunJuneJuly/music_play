<view class="ctrl">
	<view class="ctrl-item" bind:tap="onComment">
		<i class="iconfont icon-pinglun icon"></i>
		<text class="item">评论</text>
	</view>
	<view class="ctrl-item share">
		<button class="share-btn" hover-class="share-hover">
			<i class="iconfont icon-fenxiang icon"></i>
			<text class="item">分享</text>
		</button>
	</view>
</view>
<x-bottom-modal modalShow="{{showBottomModal}}">
	<view slot="modal-content">
		<textarea name="content" class="comment-content" placeholder="写评论"  fixed="true" value="{{content}}"></textarea>
		<button class="send" form-type="submit">发送</button>
	</view>
</x-bottom-modal>